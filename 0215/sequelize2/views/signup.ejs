<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <title>Document</title>
    </head>
    <body>
        <h1>회원가입</h1>
        <a href="/">이전 페이지</a>
        <form name="signup-form">
            <input type="text" id="userId" placeholder="아이디" /><br />
            <input type="password" id="pw" placeholder="비밀번호" /><br />
            <input type="text" id="username" placeholder="이름" /><br />
            <input type="text" id="age" placeholder="나이" /><br />
            <input type="email" id="email" placeholder="이메일" /><br />
            <button type="button" onclick="signupFunc()">회원가입</button>
        </form>
        <script>
            async function signupFunc() {
                const form = document.forms['signup-form'];
                const data = {
                    userId: document.querySelector('#userId').value,
                    pw: document.querySelector('#pw').value,
                    username: document.querySelector('#username').value,
                    age: document.querySelector('#age').value,
                    email: document.querySelector('#email').value,
                };
                const res = await axios({
                    method: 'POST',
                    url: '/api/member/signup',
                    data,
                });
                if (res.data.result) {
                    alert('회원가입을 축하합니다');
                    document.location.href = '/login';
                } else {
                    alert('이미 존재하는 아이디입니다.');
                }
            }
        </script>
    </body>
</html>
