<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    </head>
    <body>
        <h1>이미지 바꾸기</h1>
        <img src="public/image/q.jpg" width="300px" height="300px" />
        <br />
       <% for(let i = 0; i<fruits.length; i++) { %>
            <button class="btn <%=fruits[i].name %>" onclick=""> <%= fruits[i].kor %></button>
        <% } %>

        <script>
            $('.btn').click(function(){
                let name;
                if( $(this).hasClass('apple')){
                    name = "apple";
                } else if ( $(this).hasClass('banana')){
                    name = "banana";
                } else if ( $(this).hasClass('grapes')){
                    name = "grapes";
                } else if ( $(this).hasClass('peaches')){
                    name = "peaches";
                }
                $('img').attr("src", `/public/image/${name}.jpg`)
            })
        </script>
       
       
    </body>
</html>
